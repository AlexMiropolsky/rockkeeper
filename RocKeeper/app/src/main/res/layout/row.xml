<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tracker_id"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/route_list_selector">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:divider="?android:listDivider"
        android:showDividers="middle">

        <TextView
            android:id="@+id/DifficultyLevel"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="v1"
            android:textColor="#000"
            android:focusable="false"
            android:clickable="false" />

        <TextView
            android:id="@+id/Points"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1000"
            android:textColor="#000"
            android:focusable="false"
            android:clickable="false" />

    </LinearLayout>

    <View
        android:id="@+id/ColorLabel"
        android:background="#000"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:focusable="false"
        android:clickable="false"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RouteName"
            android:textSize="18sp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:text="Death Drop"
            android:textColor="#000"
            android:focusable="false"
            android:clickable="false"/>

        <TextView
            android:id="@+id/Location"
            android:textSize="12sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Hawaii"
            android:textColor="#000"
            android:focusable="false"
            android:clickable="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/TimesClimbedIncrementor"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:text="+"
            android:focusable="false" />

        <TextView
            android:id="@+id/TimesClimbed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="12"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:focusable="false"
            android:clickable="false" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkboxComplete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:focusable="false"/>

</LinearLayout>

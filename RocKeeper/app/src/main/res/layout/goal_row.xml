
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tracker_id"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/route_list_selector">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Points"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="1 -  "
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/RouteName"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="I want to earn 40 points by 06/02/2015 ."
            android:textColor="#000"
            android:layout_height="wrap_content" />


    </LinearLayout>


        <TextView
            android:id="@+id/TimesClimbed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="09/03/2015"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:focusable="false"
            android:clickable="false" />

    <CheckBox
        android:id="@+id/checkboxComplete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:focusable="false"/>

</LinearLayout>
